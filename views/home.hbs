
<div class="row">
  <div class="col-6"><h1>User</h1></div>
  <div class="col-6 d-flex justify-content-end" >
    <a href='/adduser' type="button" class= "btn btn-primary align-self-center"><i class="bi bi-person-plus-fill"></i> Add User</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col" class= "text-end">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.first_name}}</td>
      <td>{{this.last_name}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phone}}</td>
      <td class="text-end">
          <a class= 'btn btn-light btn-small' href='/viewall/{{this.id}}' type='button'> <i class="bi bi-eye"></i> View</a>
          <a class= 'btn btn-light btn-small' href='/edituser/{{this.id}}' type='button'> <i class="bi bi-pencil"></i> Edit</a>
          <a class= 'btn btn-light btn-small' href='/{{this.id}}' type='button'> <i class="bi bi-trash"></i> Delete</a>
      </td>
      
    </tr>
    {{/each}}
  </tbody>
</table>